<% provide(:title, @lease.address) %>
<html>
<body>
  <ul>
  <li><%= @lease.address %></li>
  <li><%= @lease.province %></li>
  <li><%= @lease.city %></li>
  <li><%= @lease.university %></li>
  <li><%= @lease.postalcode %></li>
  <li><%= @lease.numberofbathrooms %></li>
  <li><%= @lease.numberofbedrooms %></li>
  <li><%= @lease.numberofparkingspots %></li>
  <li><%= @lease.utilities %></li>
  <li><%= @lease.internet %></li>
  </ul>
  <div>
    <span id="star" data-score= <%= @avg_rating%> > </span>
  </div>

  <div>
    <%= link_to "Write a Review", new_lease_review_path(@lease),class: "btn btn-small"%>

  </div>
  <h4>Reviews</h4>
  <% @reviews.each do |review| %>
    <p>
      Comment: <%= review.comment %><br />
      Rating: <%= review.rating %>
    </p>
  <% end %>
</body>
</html>
