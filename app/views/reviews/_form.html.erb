<%= javascript_include_tag 'jquery.raty.js', 'data-turbolinks-track' => true %>

<%= simple_form_for([@lease, @lease.reviews.build]) do |f| %>
<div id="rating-form">
  <label>Rating</label>
</div>
  <%= f.input :comment %>
  <%= f.button :submit %>
<% end %>

<script>
  (function($){
    $('#rating-form').raty({
      path: '/assets/',
      scoreName: 'review[rating]'
    });
    })(jQuery);
</script>
